<p style="color: green"><%= notice %></p>
<div class="bg-light p-2 text-dark bg-opacity-75">
<h1>Comentarios</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Mostrar este Comentario", comment, class:"btn btn-dark" %>
    </p>
  <% end %>
</div>
<div class="mt-3 ms-2">
<%= link_to "Nuevo Comentario", new_comment_path, class:"btn btn-dark" %>
</div>
</div>
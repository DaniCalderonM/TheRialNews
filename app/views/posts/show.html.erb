<p style="color: green"><%= notice %></p>

<%= render @post %>

<% if @post.comments.any? %>
<strong class="bgcolor">Comentarios:</strong><br>
<% @post.comments.each do |c| %>
<div class="card">
  <div class="card-header">
<strong><i class="fa-sharp fa-solid fa-user-secret fa-2xl" style="color: #1049ad;"></i>  <%= c.user.name %> </strong>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>~<%= c.content %></p>
      <% end %>
    </blockquote>
  </div>
</div>
<br>
<% else %>

<div class="card w-50">
  <div class="card-body">
    <h5 class="card-title">Comentarios</h5>
    <p class="card-text">La publicacion no posee comentarios</p>
   <%= link_to "New comment", new_comment_path, class:"btn btn-dark" %>
  </div>
</div>
<% end %>
<br>
<div>

  <%= link_to "Editar este Post", edit_post_path(@post), class:"btn btn-dark" %> |
  <%= link_to "Volver a Posts", posts_path, class:"btn btn-dark" %> | 

  <%= link_to "New comment", new_comment_path, class:"btn btn-dark" %>
<br><br>

  <%= button_to "Destruir este Post", @post, method: :delete %>
  <br>
</div>


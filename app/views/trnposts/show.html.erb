<p style="color: green"><%= notice %></p>

<%= render @trnpost %>

<% if @trnpost.comments.any? %>
<strong class="bgcolor">Comentarios:</strong><br>
<% @trnpost.comments.each do |c| %>
<div class="card mt-2">
  <div class="card-header">
<strong><i class="fa-sharp fa-solid fa-user-secret fa-2xl" style="color: #1049ad;"></i>  <%= c.user.name %> </strong>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>â—‰<%= c.content %></p>
      
    </blockquote>
  </div>
</div>
<% end %>
<br>

<% else %>

<div class="card w-50">
  <div class="card-body">
    <h5 class="card-title">Comentarios</h5>
    <p class="card-text">La publicacion no posee comentarios</p>
   <%= link_to "Nuevo Comentario", new_comment_path, class:"btn btn-dark" %>
  </div>
</div>
<% end %>
<br>
<div>

  <%= link_to "Editar este Post", edit_trnpost_path(@trnpost), class:"btn btn-dark" %> |
  <%= link_to "Volver a Posts", trnposts_path, class:"btn btn-dark" %> | 

  <%= link_to "Nuevo Comentario", new_comment_path, class:"btn btn-dark" %> |
  <%= link_to "Todos los Comentarios", comments_path, class:"btn btn-dark" %>
<br><br>

  <%= button_to "Destruir este Post", @trnpost, method: :delete %>
  <br>
</div>

